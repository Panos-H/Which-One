<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/configLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.panos.oddandroid.customview.LayoutBackground
        android:id="@+id/configLayoutBackground"
        style="@style/MatchConfigBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/configTitle"
        style="@style/MatchConfigTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/configHelpingView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configTitle" />

    <ImageView
        android:id="@+id/configSelection"
        style="@style/MatchConfigSelect"
        app:layout_constraintBottom_toBottomOf="@+id/configHelpingView"
        app:layout_constraintStart_toEndOf="@+id/configTitle"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/configExpandButton"
        style="@style/MatchConfigExpandButton"
        app:layout_constraintBottom_toBottomOf="@+id/configHelpingView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/configOptionsFrameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configHelpingView"/>

</androidx.constraintlayout.widget.ConstraintLayout>