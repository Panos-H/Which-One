<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryHighlight</item>
        <item name="android:textViewStyle">@style/WhiteText</item>
    </style>

    <style name="WhiteText" parent="android:Widget.TextView">
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- SPLASH LAYOUT STYLES -->
    <!-- SPLASH LAYOUT STYLES END -->

